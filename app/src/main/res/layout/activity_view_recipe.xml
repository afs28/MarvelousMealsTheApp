<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="45dp"
    android:paddingBottom="16dp"
    tools:context=".ViewRecipeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                tools:text="Recipe Title" />

            <TextView
                android:id="@+id/recipe_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Recipe Description" />

            <TextView
                android:id="@+id/allergy_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allergy_tag"
                android:textStyle="bold"
                android:paddingTop="15dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Allergy factors:" />

            <TextView
                android:id="@+id/recipe_allergy_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Allergy Factors" />

            <TextView
                android:id="@+id/difficulty_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficulty_tag"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Difficulty level:" />

            <TextView
                android:id="@+id/recipe_difficulty_level_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Difficulty Level" />

            <TextView
                android:id="@+id/image_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/image"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Image:" />

            <TextView
                android:id="@+id/recipe_image_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Image:" />

            <TextView
                android:id="@+id/fornumberofpeople_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_number_of_people"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="For number of people:" />

            <TextView
                android:id="@+id/recipe_fornumberofpeople_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="For number of people:" />

            <TextView
                android:id="@+id/preptime_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prep_time"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Prep time:" />

            <TextView
                android:id="@+id/recipe_prep_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Prep time:" />

            <TextView
                android:id="@+id/ratings_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/ratings_tag"
                tools:text="Ratings:" />

            <TextView
                android:id="@+id/recipe_ratings_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Ratings" />

            <TextView
                android:id="@+id/comments_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments_tag"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Comments:" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comments_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
