<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="45dp"
    android:paddingBottom="16dp"
    tools:context=".ViewRecipeActivity">

    <!--
    <TextView/>
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_menu_testing"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155" />
        -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                tools:text="Recipe Title" />

            <TextView
                android:id="@+id/recipe_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Recipe Description" />

            <TextView
                android:id="@+id/allergy_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allergy_tag"
                android:textStyle="bold"
                android:paddingTop="15dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Allergy factors:" />

            <TextView
                android:id="@+id/recipe_allergy_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Allergy Factors" />

            <TextView
                android:id="@+id/difficulty_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficulty_tag"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Difficulty level:" />

            <TextView
                android:id="@+id/recipe_difficulty_level_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Difficulty Level" />

            <TextView
                android:id="@+id/ratings_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="@string/ratings_tag"
                tools:text="Ratings:" />

            <TextView
                android:id="@+id/recipe_ratings_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Ratings" />

            <TextView
                android:id="@+id/comments_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comments_tag"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Comments:" />

            <TextView
                android:id="@+id/recipe_comments_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="Comments" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>